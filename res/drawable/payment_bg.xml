<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/white"/>

            <stroke
                android:width="1px"
                android:color="@color/gray"/>
            <padding android:top="@dimen/margin_size_4dp"
                     android:bottom="@dimen/margin_size_4dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/index_red"/>

            <stroke
                android:width="1px"
                android:color="@color/index_red"/>
            <padding android:top="@dimen/margin_size_4dp"
                     android:bottom="@dimen/margin_size_4dp"/>
        </shape>
    </item>
</selector>