<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="请选择验证身份方式"
        android:textColor="@color/black"
        android:textSize="@dimen/common_big_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/grey_cornor_bg"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/spinner_jiantou"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:background="@drawable/spinner_down"
            android:scaleType="centerInside" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_identity_way"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="已验证手机:"
        android:textColor="@color/black"
        android:textSize="@dimen/common_big_text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_check_code"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/common_edit_bg_gray"
            android:gravity="center_vertical"
            android:hint="请输入手机验证码"
            android:numeric="integer"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/btn_get_message"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_btn_blue_selector"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="获取短信验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/next_step"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/common_btn_red_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/common_big_text_size" />

</LinearLayout>