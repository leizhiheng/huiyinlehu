<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huiyin.ui.home.WaterPayFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/phone_pay_step2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="充值号码:"
                android:textColor="#999999"
                android:textSize="@dimen/common_big_text_size" />

            <EditText
                android:id="@+id/phone_number_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_8dp"
                android:background="@null"
                android:inputType="phone"
                android:paddingLeft="3dp"
                android:text="18255655255"
                android:textColor="@color/black"
                android:textSize="@dimen/common_big_text_size" />

            <TextView
                android:id="@+id/phone_address_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_8dp"
                android:background="@null"
                android:inputType="phone"
                android:paddingRight="5dp"
                android:text="(广东移动)"
                android:textColor="@color/black"
                android:textSize="@dimen/common_small_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="充值金额:"
                android:textColor="#999999"
                android:textSize="@dimen/common_big_text_size" />

            <EditText
                android:id="@+id/phone_money_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_8dp"
                android:background="@null"
                android:inputType="phone"
                android:paddingLeft="3dp"
                android:text="¥ 50"
                android:textColor="@color/red_dark"
                android:textSize="@dimen/common_big_text_size" />
        </LinearLayout>

        <Button
            android:id="@+id/water_payment_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_size_8dp"
            android:background="@drawable/red_cornor_bg"
            android:text="确认缴费"
            android:textSize="16sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/phone_pay_back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_size_8dp"
            android:background="@drawable/grey_cornor_bg"
            android:text="返回上一步"
            android:textSize="16sp"
            android:textColor="@color/exchange_text_color" />
    </LinearLayout>

</ScrollView>