<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TextView
        android:id="@+id/tv_bound_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="您当前的手机号码是：132****8846"
        android:padding="10dp"
        android:textSize="@dimen/common_big_text_size"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <EditText
            android:id="@+id/et_check_code"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/common_edit_bg_gray"
            android:gravity="center_vertical"
            android:hint="请输入手机验证码"
            android:numeric="integer"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/btn_get_message"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_btn_blue_selector"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="获取短信验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/next_step"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="下一步"
        android:background="@drawable/common_btn_red_selector"
        android:textSize="@dimen/common_big_text_size"/>
    <TextView
        android:id="@+id/tv_modify_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:lineSpacingMultiplier="1.5"
        android:text="小提示：\n您的手机绑定之后，即可享受手机登录、找回密码、消费提醒、便民生活服务卡绑定等服务，您的网上购物体验更安全更便捷。"
        android:textSize="@dimen/common_small_text_size"/>
</LinearLayout>
