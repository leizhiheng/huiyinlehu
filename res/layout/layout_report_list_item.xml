<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="false"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray7" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/report_item_shop_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/lehu" />

        <TextView
            android:id="@+id/report_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="格力旗舰店  "
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/arrow_to_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/arrow_left" >
        </ImageView>

        <TextView
            android:id="@+id/report_item_deal_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="未处理  "
            android:textColor="@color/red_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray7" >
    </View>

    <RelativeLayout
        android:id="@+id/report_item_product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/report_item_goods_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/report_item_good_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/report_item_goods_icon"
            android:lines="3"
            android:text="海尔（Haier）KFR-35GW/WJCA31.5匹除甲醛冷暖变频挂机"
            android:textSize="14sp" >
        </TextView>

        <TextView
            android:id="@+id/report_item_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_item_good_message"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/report_item_goods_icon"
            android:text="￥ 1399.00"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:visibility="gone" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="举报时间： "
            android:textColor="@color/grayfont"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/report_item_submit_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:text=" 2014-07-21 14:31:23"
            android:textColor="@color/grayfont"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/report_item_report_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_frame_gray"
            android:gravity="center"
            android:padding="5dp"
            android:text="举报内容"
            android:textColor="@color/text_color_black"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>