<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="20.0dip"
    android:paddingLeft="14.0dip"
    android:paddingRight="14.0dip">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:gravity="center"
        android:paddingBottom="16.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="16.0dip"
        android:singleLine="true"
        android:text=""
        android:textColor="#ff484848"
        android:textSize="20.0sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="#ffb6b6b6" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnMinus"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:scaleType="fitXY"
                android:src="@drawable/mashangjiesuan_03" />

            <EditText
                android:id="@+id/count"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/btnMinus"
                android:background="@drawable/all_while_black_line_bg"
                android:gravity="center"
                android:maxLength="3"
                android:text="1"
                android:inputType="number"
                android:singleLine="true"
                android:digits="0123456789"
                android:textColor="@color/font_black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/count"
                android:scaleType="fitXY"
                android:src="@drawable/mashangjiesuna_08" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dip">

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dip"
            android:layout_height="36dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/red_cornor_bg"
            android:singleLine="true"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dip"
            android:layout_height="36dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/common_btn_gray2_selector"
            android:singleLine="true"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>