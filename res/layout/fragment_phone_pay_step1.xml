<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huiyin.ui.home.WaterPayFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/phone_pay_step1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="手机号码:"
                android:textColor="#999999"
                android:textSize="@dimen/common_big_text_size" />

            <EditText
                android:id="@+id/phone_number_edittext"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/margin_size_8dp"
                android:layout_weight="1"
                android:background="@drawable/grey_cornor_bg"
                android:drawableRight="@drawable/phone_pay_contact"
                android:inputType="phone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/common_big_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="充值金额:"
                android:textColor="#999999"
                android:textSize="@dimen/common_big_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/pay_money_10_iv"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="@dimen/margin_size_8dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_pay_10_on" />

                    <ImageView
                        android:id="@+id/pay_money_20_iv"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="@dimen/margin_size_8dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_pay_20_in" />

                    <ImageView
                        android:id="@+id/pay_money_30_iv"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="@dimen/margin_size_8dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_pay_30_in" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/pay_money_50_iv"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="@dimen/margin_size_8dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_pay_50_in" />

                    <ImageView
                        android:id="@+id/pay_money_100_iv"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="@dimen/margin_size_8dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_pay_100_in" />

                    <ImageView
                        android:id="@+id/pay_money_200_iv"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="@dimen/margin_size_8dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_pay_200_in" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/margin_size_8dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/phone_pay_input"
                    android:gravity="right" >

                    <EditText
                        android:id="@+id/pay_money_other_et"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="其他金额"
                        android:inputType="number"
                        android:paddingRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_big_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/water_payment_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_size_8dp"
            android:background="@drawable/red_cornor_bg"
            android:text="下一步"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>