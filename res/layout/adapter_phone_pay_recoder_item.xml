<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#E6E6E6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/horizontal_grey_line_divider_1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_size_16dp"
        android:layout_marginRight="@dimen/margin_size_16dp" >

        <ImageView
            android:id="@+id/recoder_type"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/phone_pay_icon" />

        <TextView
            android:id="@+id/recoder_time"
            style="@style/fill_order_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/recoder_type"
            android:text="缴费日期:5015-6-19" />

        <TextView
            android:id="@+id/recoder_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="缴费成功"
            android:textColor="@color/index_red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/horizontal_grey_line_divider_1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/recoder_user_num"
                style="@style/fill_order_item_text"
                android:text="手机号码: 158562356365" />

            <TextView
                android:id="@+id/recoder_order_num"
                style="@style/fill_order_item_text"
                android:layout_marginTop="10dp"
                android:text="平台流水号: 20025714679775" />
        </LinearLayout>

        <TextView
            android:id="@+id/recoder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_16dp"
            android:text="¥ 30"
            android:textColor="@color/index_red"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line_middle"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:background="@drawable/horizontal_grey_line_divider_1dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/recoder_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f5f3"
        android:paddingLeft="@dimen/margin_size_16dp"
        android:paddingRight="@dimen/margin_size_16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#999999"
        android:textSize="14sp"
        android:visibility="visible"
        android:text="充值失败原因" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/horizontal_grey_line_divider_1dp" />

</LinearLayout>