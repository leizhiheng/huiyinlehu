<?xml version="1.0" encoding="utf-8"?>
<com.huiyin.wight.NestScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scoroll_view"
            android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- 商品主图片-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dip">

            <android.support.v4.view.ViewPager
                android:id="@+id/gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:persistentDrawingCache="animation"/>

            <TextView
                android:id="@+id/gallery_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dip"
                android:layout_marginTop="16dip"
                tools:text="11"
                android:textColor="#484848"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/collection_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_collect_selector" />

                <TextView
                    android:id="@+id/collection_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="4dip"
                    android:text="（1028人）"
                    android:textColor="#484848"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="#ffb6b6b6" />

        <!-- 商品基本信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_baseinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="42dip"
                    android:drawableRight="@drawable/ic_arrow3"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dip"
                    android:paddingRight="12dip"
                    android:text="商品信息"
                    android:textColor="#ff484848"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_arrow3"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#ff484848"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#ff3592e2"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cuxiaojia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="促销价："
                        android:textColor="#484848"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lehu_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    android:layout_below="@id/cuxiaojia">

                    <TextView
                        android:id="@+id/tv_price_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="乐虎价："
                        android:textColor="#484848"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lehu_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1000"
                        android:textColor="@color/red"
                        android:textSize="14sp" />
                    
                     <TextView
                        android:id="@+id/lehu_redpacket_deduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="可用红包金额 :111"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_jb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:text="举报"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/light_gray"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/cankaojia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dip"
                    android:visibility="gone"
                    android:layout_marginTop="4dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="参考价："
                        android:textColor="#9e9e9e"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/reference_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#9e9e9e"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/countTime_layout"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_toRightOf="@id/layout_l"
                android:layout_toLeftOf="@id/tv_jb">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="#ffb6b6b6" />
                <TextView
                    android:id="@+id/countTime"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical"
                    android:textColor="#484848"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_zs"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="#ffb6b6b6" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赠送"
                        android:textColor="#9e9e9e"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_lehujuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:gravity="center"
                        android:textColor="#DC434D"
                        android:background="@drawable/quan1"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:gravity="center"
                        android:textColor="#31ADF7"
                        android:background="@drawable/quan2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:gravity="center"
                        android:background="@drawable/quan3"
                        android:textColor="#FDB915"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="#ffb6b6b6" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="促销"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#9e9e9e"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <com.huiyin.wight.MyListView
                            android:id="@+id/lv_zs"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:listSelector="@android:color/transparent"
                            android:dividerHeight="0.1dp"
                            android:divider="@color/light_gray" />

                        <View
                            android:id="@+id/line_zs"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dip"
                            android:background="#ffb6b6b6" />

                        <com.huiyin.wight.MyListView
                            android:id="@+id/lv_mj"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:listSelector="@android:color/transparent"
                            android:dividerHeight="0.1dp"
                            android:divider="@color/light_gray" />

                        <View
                            android:id="@+id/line_mj"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dip"
                            android:background="#ffb6b6b6" />

                        <com.huiyin.wight.MyExpandableListView
                            android:id="@+id/lv_mz"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:listSelector="@android:color/transparent"
                            android:groupIndicator="@drawable/expand_list_indicator"
                            android:dividerHeight="0.1dp"
                            android:divider="@color/light_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ps"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="#ffb6b6b6" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送至"
                        android:textColor="#9e9e9e"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:textColor="#9e9e9e"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_dw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/dw1" />

                    <TextView
                        android:id="@+id/tv_kc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_arrow3" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="#ffb6b6b6" />

            <LinearLayout
                android:id="@+id/layout_select_params"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:text="已选"
                    android:textColor="#9e9e9e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_shuxing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.75"
                    android:text=""
                    android:textColor="#9e9e9e"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow3"
                    android:layout_weight="0.1"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="#ffb6b6b6" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务"
                    android:textColor="#9e9e9e"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="#9e9e9e"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/fuwu1"
                            android:text=" 免运费"
                            android:textColor="#9e9e9e"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/fuwu1"
                            android:layout_marginLeft="5dp"
                            android:text=" 送货上门"
                            android:textColor="#9e9e9e"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/fuwu1"
                            android:layout_marginLeft="5dp"
                            android:text=" 自提"
                            android:textColor="#9e9e9e"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/fuwu1"
                            android:visibility="gone"
                            android:layout_marginLeft="5dp"
                            android:text=" 免费安装"
                            android:textColor="#9e9e9e"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="#ffb6b6b6" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提示"
                    android:textColor="#9e9e9e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_product_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="7天内无条件退货"
                    android:textSize="14sp"
                    android:textColor="@color/red" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_huodong"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="#ffb6b6b6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:background="#ffe7e7e7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="#ffb6b6b6" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rqzh"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:visibility="visible"
                    android:text="人气组合"
                    android:drawableRight="@drawable/ic_arrow3"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    />

                <View
                    android:id="@+id/tv_rqzh_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:visibility="visible"
                    android:background="#ffb6b6b6" />

                <TextView
                    android:id="@+id/tv_tjdp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:visibility="visible"
                    android:text="推荐搭配"
                    android:drawableRight="@drawable/ic_arrow3"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <View
                    android:id="@+id/tv_tjdp_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:visibility="visible"
                    android:background="#ffb6b6b6" />

                <TextView
                    android:id="@+id/tv_yhtc"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text="优惠套餐"
                    android:drawableRight="@drawable/ic_arrow3"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp"
                    android:gravity="center_vertical|left" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_dianpu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="#ffb6b6b6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:background="#ffe7e7e7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="#ffb6b6b6" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dpname"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:text=""
                    android:drawableRight="@drawable/ic_arrow3"
                    android:drawableLeft="@drawable/dian1"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp"
                    android:gravity="center_vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="#ffb6b6b6" />

                <LinearLayout
                    android:id="@+id/layout_dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <RatingBar
                        android:id="@+id/rb_pf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:stepSize="0.1"
                        android:numStars="5"
                        style="@style/RetingBarRed" />

                    <TextView
                        android:id="@+id/tv_pf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14dp"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/btn_jrdp"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="46dp"
                        android:text="进入店铺"
                        android:gravity="center"
                        android:textSize="@dimen/common_lage_text_size"
                        android:background="@drawable/btn_bg_solid_red" />

                    <TextView
                        android:id="@+id/btn_scdp"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="46dp"
                        android:layout_marginLeft="10dp"
                        android:text="关注店铺"
                        android:gravity="center"
                        android:textSize="@dimen/common_lage_text_size"
                        android:background="@drawable/btn_bg_solid_red" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="#ffb6b6b6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:background="#ffe7e7e7" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="#ffb6b6b6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_evaluation"
                android:layout_width="match_parent"
                android:layout_height="42dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="评价晒单"
                    android:textColor="#ff484848"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/mRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_arraw"
