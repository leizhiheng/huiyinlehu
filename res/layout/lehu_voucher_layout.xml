<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:divider="@drawable/horizontal_divider_5dp"
            android:orientation="horizontal"
            android:showDividers="middle" >

            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="申领记录"
                android:textColor="@drawable/sank_select"
                android:textSize="@dimen/common_lage_text_size" />

            <TextView
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上传发票"
                android:textColor="@drawable/sank_select"
                android:textSize="@dimen/common_lage_text_size" />
        </LinearLayout>

        <Button
            android:id="@+id/apply_info"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/lehu_voucher_apply_button_select"
            android:text="申领细则"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/common_lage_text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/viewpager_index"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:background="@color/index_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/EE" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <android.support.v4.view.ViewPager
            android:id="@+id/lehu_voucher_layout_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>