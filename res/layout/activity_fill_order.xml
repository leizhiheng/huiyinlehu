<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.huiyin.ui.fillorder.FillOrderActivity"
                android:background="@color/EE">

    <include
        android:id="@+id/title"
        layout="@layout/common_title_layout"/>

    <include
        android:id="@+id/content"
        android:layout_below="@+id/title"
        android:layout_above="@+id/fill_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_fill_order_content"/>

    <RelativeLayout
        android:id="@+id/fill_order_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_height">
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/horizontal_grey_line_divider_1dp"/>
        <TextView
            android:id="@+id/fill_order_account_all_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_16dp"
            android:layout_centerVertical="true"
            android:text="应付金额："
            />
        <Button
            android:id="@+id/fill_order_submit"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_size_16dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="提交订单"
            android:textSize="@dimen/common_big_text_size"
            android:textColor="@color/white"
            android:background="@drawable/red_cornor_bg"/>
    </RelativeLayout>
</RelativeLayout>