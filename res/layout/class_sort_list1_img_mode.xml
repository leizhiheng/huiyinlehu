<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/horizontal_divider_5dp"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:background="@color/gray6"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:showDividers="middle" >

    <LinearLayout
        android:id="@+id/class_sort_list1_img_mode_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/class_sort_list1_img_mode_iv1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/img_corner_bg"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/class_sort_list1_img_mode_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/class_sort_list1_img_mode_jiage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="￥2999"
            android:textColor="@color/red"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_sort_list1_img_mode_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/class_sort_list1_img_mode_iv2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/img_corner_bg"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/class_sort_list1_img_mode_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/class_sort_list1_img_mode_jiage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="￥2999"
            android:textColor="@color/red"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

</LinearLayout>