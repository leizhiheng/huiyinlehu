<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:background="@color/gray6"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/vip_layout_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_big"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/white"
            android:minHeight="100dp"
            android:src="@drawable/default_good"
            android:layout_gravity="center">
        </ImageView>

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            tools:text="Haier/海尔KFR-35GW/05KBP22A(DS)大1.5匹"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:lines="2"/>

        <TextView
            android:id="@+id/jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_name"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            tools:text="积分：3399"
            android:textColor="@color/red"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/price_lehu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jifen"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            tools:text="乐虎价：3599"
            android:textColor="#999999"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vip_layout_lehuquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yhj1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hongbao_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            tools:text="500积分兑换"
            android:textColor="#dd434d"
            android:textSize="16sp">
        </TextView>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dd434d">
        </View>

        <RelativeLayout
            android:id="@+id/layout_hongbao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sign_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/hongbao_value"
                android:src="@drawable/yhj3">
            </ImageView>

            <TextView
                android:id="@+id/hongbao_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sign_money"
                tools:text="5"
                android:textColor="#dd434d"
                android:layout_centerVertical="true"
                android:textSize="24sp"/>

            <View
                android:id="@+id/line2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/hongbao_value"
                android:layout_centerInParent="true"
                android:background="#dd434d"
                android:minHeight="50dp">
            </View>

            <LinearLayout
                android:id="@+id/lehuquan_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/line2"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/change_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    tools:text="满50减5"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/lehuquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐虎券"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/click_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/yhj2">
        </ImageView>

    </LinearLayout>

</LinearLayout>