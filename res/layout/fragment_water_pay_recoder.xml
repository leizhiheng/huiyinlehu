<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

    <com.huiyin.wight.pulltorefresh.PullToRefreshListView
        xmlns:pulltorefresh="http://schemas.android.com/apk/res/com.huiyin"
        android:id="@+id/water_pay_recoder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        pulltorefresh:ptrAnimationStyle="flip"
        pulltorefresh:ptrHeaderBackground="@color/gray7"
        pulltorefresh:ptrMode="disabled"/>
</LinearLayout>