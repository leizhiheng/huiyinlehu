<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="请输入新的登录密码"
        android:textColor="@color/black"
        android:textSize="@dimen/common_big_text_size" />

    <EditText
        android:id="@+id/et_new_pw"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/common_edit_bg_gray"
        android:gravity="center_vertical"
        android:hint="请输入新密码"
        android:padding="5dp"
        android:inputType="textPassword"
        android:textColor="@color/gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/common_big_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" >

        <include 
            android:id="@+id/layout_pw_level"
            layout="@layout/layout_security_level" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_identity_way"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="建议您设置更高强度的密码"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_big_text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_check_pw"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/common_edit_bg_gray"
            android:gravity="center_vertical"
            android:hint="再次确认密码"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/gray"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_big_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/next_step"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/common_btn_red_selector"
        android:gravity="center"
        android:padding="10dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/common_big_text_size" />

</LinearLayout>