<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/store_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/lehu" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="乐虎自营"
            android:textColor="@color/font_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/store_info_navigator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_next_left" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/radio_btn_selector"
            android:checked="false"
            android:gravity="center"
            android:button="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="5dip"
            android:paddingRight="8dip"
            android:paddingTop="5dp" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:src="@drawable/shopping_car_yhtc" />

        <ImageView
            android:id="@+id/btnMinus"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/mashangjiesuan_03" />

        <TextView
            android:id="@+id/count"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/all_while_black_line_bg"
            android:gravity="center"
            android:maxLength="3"
            android:text="1"
            android:textColor="@color/font_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/mashangjiesuna_08" />

        <TextView
            android:id="@+id/goods_sum_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="18sp" />
    </LinearLayout>

    <com.huiyin.wight.MyListView
        android:id="@+id/goods_base_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/cornor_clolr"
        android:dividerHeight="1dp"
        android:paddingLeft="35dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray" />
</LinearLayout>

