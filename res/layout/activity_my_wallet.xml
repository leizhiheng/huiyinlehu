<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:id="@+id/my_wallet_balance"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/margin_size_16dp"
        android:paddingRight="@dimen/margin_size_16dp"
        android:background="@drawable/mylehu_item_selector"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/my_wallet_balance_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_my_assert"
            android:scaleType="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/my_wallet_balance_image"
            android:gravity="left|center"
            android:text="红包"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/my_wallet_balance_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_size_8dp"
            android:drawableRight="@drawable/com_black_arraw"
            android:gravity="left|center"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size"
            tools:text="100.00" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffb6b6b6" />

    <RelativeLayout
        android:id="@+id/my_wallet_huquan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/mylehu_item_selector"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_size_16dp"
        android:paddingRight="@dimen/margin_size_16dp" >

        <ImageView
            android:id="@+id/my_wallet_huquan_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/lehu_quan"
            android:scaleType="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/my_wallet_huquan_image"
            android:gravity="left|center"
            android:text="乐虎券"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/my_wallet_huquan_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_size_8dp"
            android:drawableRight="@drawable/com_black_arraw"
            android:gravity="left|center"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffb6b6b6" />

    <RelativeLayout
        android:id="@+id/my_wallet_integral"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/mylehu_item_selector"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_size_16dp"
        android:paddingRight="@dimen/margin_size_16dp" >

        <ImageView
            android:id="@+id/my_wallet_integral_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/user_my_wallet_jf"
            android:scaleType="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/my_wallet_integral_image"
            android:gravity="left|center"
            android:text="积分"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/my_wallet_integral_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_size_8dp"
            android:drawableRight="@drawable/com_black_arraw"
            android:gravity="left|center"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size"
            tools:text="200" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffb6b6b6" />

    <RelativeLayout
        android:id="@+id/my_wallet_card"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/mylehu_item_selector"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_size_16dp"
        android:paddingRight="@dimen/margin_size_16dp" >

        <ImageView
            android:id="@+id/my_wallet_card_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/yufuka"
            android:scaleType="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/my_wallet_card_image"
            android:gravity="left|center"
            android:text="便民生活服务卡"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/my_wallet_card_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/margin_size_8dp"
            android:drawableRight="@drawable/com_black_arraw"
            android:gravity="left|center"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size"
            tools:text="0.00" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffb6b6b6" />

</LinearLayout>