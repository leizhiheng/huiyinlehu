<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/actionbar_common_back_2" />

    <RadioGroup
        android:id="@+id/collect_list_layout_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/goods_RadioButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="商品"
            android:textColor="@drawable/sank_select"
            android:textSize="@dimen/common_lage_text_size" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:background="@color/gray" />

        <RadioButton
            android:id="@+id/store_RadioButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="店铺"
            android:textColor="@drawable/sank_select"
            android:textSize="@dimen/common_lage_text_size" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray" />

    <com.huiyin.wight.XListView
        android:id="@+id/xlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:cacheColorHint="#0000"
        android:divider="#0000"
        android:dividerHeight="10dp"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:listSelector="@drawable/list_item_drawable_bg"
        android:scrollbars="none" />

</LinearLayout>