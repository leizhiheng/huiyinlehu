<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6E6E6">

    <RelativeLayout
        android:id="@+id/common_title_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_height"
        android:background="@color/index_red">

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/com_return"
            android:gravity="center"
            android:padding="5dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/common_lage_text_size" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxEms="10"
            android:padding="5dp"
            android:singleLine="true"
            android:text="我的服务"
            android:textColor="@color/white"
            android:textSize="@dimen/common_lage_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- 我的预约 -->

    <RelativeLayout
        android:id="@+id/lehu_my_bespeak"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/mylehu_item_selector"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lehu_bespeak_image_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/lehu_bespeak"
            android:scaleType="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/lehu_bespeak_image_id"
            android:drawableRight="@drawable/com_black_arraw"
            android:gravity="left|center"
            android:paddingRight="10dp"
            android:text="我的预购"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size" />
    </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffb6b6b6" />

    <!-- 我的投诉 -->
    <LinearLayout
        android:id="@+id/lehu_my_complaint"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/mylehu_item_selector"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/icon_complaint"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/com_black_arraw"
            android:gravity="left|center"
            android:paddingRight="10dp"
            android:text="我的投诉"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ffb6b6b6" />

    <!-- 我的举报 -->
    <RelativeLayout
        android:id="@+id/lehu_my_report"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/mylehu_item_selector"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lehu_report_image_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_phone"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/lehu_report_image_id"
            android:drawableRight="@drawable/com_black_arraw"
            android:gravity="left|center"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="我的举报"
            android:textColor="#ff484848"
            android:textSize="@dimen/common_big_text_size" />
    </RelativeLayout>
</LinearLayout>
