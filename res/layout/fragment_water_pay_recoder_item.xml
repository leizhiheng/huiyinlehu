<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_height="15dp"
        android:layout_width="match_parent"
        android:background="#E6E6E6"/>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/horizontal_grey_line_divider_1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_size_16dp"
        android:layout_marginRight="@dimen/margin_size_16dp">

        <ImageView
            android:id="@+id/recoder_type"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sf"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/recoder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/recoder_type"
            android:text="缴费日期:5015-6-19"
            style="@style/fill_order_item_text"
            />

        <TextView
            android:id="@+id/recoder_status"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="缴费成功"
            android:textColor="@color/red"
            />

        <View
            android:layout_height="0.2dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/horizontal_grey_line_divider_1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/recoder_user_num"
                style="@style/fill_order_item_text"
                tools:text="缴费账户: 0000 0000 0000 00"
                />

            <TextView
                android:id="@+id/recoder_order_num"
                style="@style/fill_order_item_text"
                tools:text="平台流水号: 13714679775"
                android:layout_below="@+id/recoder_user_num"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/recoder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1111"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_16dp"
            />
    </RelativeLayout>

    <View
        android:id="@+id/line_middle"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_size_8dp"
        android:background="@drawable/horizontal_grey_line_divider_1dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/recoder_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="1111"
        android:textColor="#999999"
        android:background="#f6f5f3"
        android:textSize="16sp"
        android:paddingLeft="@dimen/margin_size_16dp"
        android:paddingRight="@dimen/margin_size_16dp"
        android:visibility="gone"
        />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/horizontal_grey_line_divider_1dp"/>
</LinearLayout>